<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_person_24" />

    <ProgressBar
        android:id="@+id/receiver_message_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message_receiver_image_view"
        android:layout_alignTop="@id/message_receiver_image_view"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:text="receiver messages here"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvFileMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-10dp"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_messages_layout"
        android:padding="10dp"
        android:text="file Message"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_below="@+id/message_sender_image_view"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_below="@+id/message_receiver_image_view"
        android:id="@+id/tvFileRecMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="90dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:text="receiver File"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sender_messages_layout"
        android:padding="10dp"
        android:text="sender messages"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>