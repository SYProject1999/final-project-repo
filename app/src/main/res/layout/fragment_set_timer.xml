<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Material3.DayNight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1F1B2E"
    tools:context=".timer.SetTimerFragment">

    <TextView
        android:id="@+id/setTimerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Add new Timer"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/focusTimeTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#545068"
        app:boxStrokeColor="#FFFFFF"
        app:endIconTint="@color/white"
        android:hint="Focus time"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/setTimerTitle">

        <AutoCompleteTextView
            android:id="@+id/focusTimeAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="25 minutes"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/shortBreakTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/focusTimeTextInputLayout"
        android:hint="Short Break"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:boxBackgroundColor="#545068"
        app:boxStrokeColor="#FFFFFF"
        app:endIconTint="@color/white">

        <AutoCompleteTextView
            android:id="@+id/shortBreakAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:text="5 minutes"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/longBreakTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#545068"
        app:boxStrokeColor="#FFFFFF"
        app:endIconTint="@color/white"
        android:hint="Long Break"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/shortBreakTextInputLayout">

        <AutoCompleteTextView
            android:id="@+id/longBreakAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="15 minutes"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/sectionsTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#545068"
        app:boxStrokeColor="#FFFFFF"
        app:endIconTint="@color/white"
        android:hint="Sections"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/longBreakTextInputLayout">

        <AutoCompleteTextView
            android:id="@+id/sectionsAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="3 intervals"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/startTimerBtn"
        style="@style/Widget.Material3.Button"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/sectionsTextInputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Start"
        android:textSize="20sp"/>

