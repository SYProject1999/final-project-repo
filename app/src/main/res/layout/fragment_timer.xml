<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1F1B2E"
    tools:context=".timer.TimerFragment">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_library_music_24"
        android:background="#5454C2"
        android:layout_margin="25dp"
        android:layout_gravity="top|end"/>

    <LinearLayout
        android:id="@+id/break_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="125dp"
        android:visibility="invisible"
        android:clickable="false"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Break Time: "
            android:textSize="30sp"
            android:textColor="#FFFFFF"/>

        <Chronometer
            android:id="@+id/break_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textAlignment="center" />

    </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/task_text"-->
<!--            android:layout_width="300dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Task: blah blah blah blah"-->
