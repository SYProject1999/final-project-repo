<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_person_24"
        app:civ_border_color="#000"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="@color/white" />

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Group Name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tvProfileName"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvGroupMembers"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#9E000000"
            android:layout_width="match_parent"
            android:text="Group Members"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_baseline_groups_24"
            android:gravity="center"
            android:drawableTint="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/tvGroupTasks"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#9E000000"
            android:layout_width="match_parent"
            android:text="Group Tasks"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_baseline_task_24"
            android:gravity="center"
            android:drawableTint="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/tvExploreMedia"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#9E000000"
            android:layout_width="match_parent"
            android:text="Explore Media"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_media_files"
            android:gravity="center"
            android:drawableTint="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_height="70dp"/>
    </LinearLayout>





</RelativeLayout>